<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="customEditors">
            <map>
                <entry key="java.lang.reflect.Type" value="org.zenframework.commons.bean.propertyEditors.TypePropertyEditor" />
            </map>
        </property>
    </bean>

    <bean id="jettyPort" class="java.lang.Integer">
        <constructor-arg value="10000" />
    </bean>

    <bean id="serviceInvoker" class="org.zenframework.easyservices.impl.ServiceInvokerImpl" scope="singleton">
        <property name="descriptorFactory">
            <bean class="org.zenframework.easyservices.descriptor.DefaultDescriptorFactory">
                <property name="extractors">
                    <list>
                        <bean class="org.zenframework.easyservices.descriptor.XmlDescriptorExtractor">
                            <constructor-arg value="classpath://descriptor.xml" />
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="server" class="org.zenframework.easyservices.test.HttpServer" scope="singleton">
        <property name="port" value="#{jettyPort}" />
        <property name="resourceFactory">
            <bean class="org.zenframework.commons.resource.ClasspathResourceFactory" />
        </property>
        <property name="serviceHttpRequestHandler">
            <bean class="org.zenframework.easyservices.http.ServiceHttpRequestHandler">
                <property name="serviceInvoker" ref="serviceInvoker" />
            </bean>
        </property>
    </bean>

    <bean id="clientFactory" class="org.zenframework.easyservices.impl.ClientFactoryImpl" scope="singleton">
        <property name="baseUrl" value="http://localhost:#{jettyPort}/services" />
    </bean>

</beans>
