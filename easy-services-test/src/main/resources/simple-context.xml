<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:default-context.xml" />

    <bean id="addService" class="org.zenframework.easyservices.test.simple.Addition" scope="singleton" />

    <bean id="subService" class="org.zenframework.easyservices.test.simple.Substraction" scope="singleton" />

    <bean id="bindServices" class="org.zenframework.easyservices.jndi.JNDIHelper" scope="singleton" factory-method="bindAll">
        <constructor-arg ref="serviceRegistry" />
        <constructor-arg>
            <map>
                <entry key="/add" value-ref="addService" />
                <entry key="/sub" value-ref="subService" />
            </map>
        </constructor-arg>
    </bean>

</beans>
